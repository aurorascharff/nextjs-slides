{
  "name": "nextjs-slides",
  "version": "0.8.0",
  "description": "Composable slide deck primitives for Next.js â€” powered by React 19 ViewTransitions, Tailwind CSS, and highlight.js syntax highlighting.",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./sync": {
      "types": "./dist/sync.d.ts",
      "import": "./dist/sync.js"
    },
    "./styles.css": "./dist/slides.css"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "next": ">=15.0.0",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0",
    "tailwindcss": ">=4.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "highlight.js": "^11.11.1",
    "tailwind-merge": "^3.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^10.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^10.0.2",
    "jsdom": "^25.0.0",
    "next": "^16.0.0",
    "prettier": "^3.8.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "semantic-release": "^24.2.0",
    "tsup": "^8.4.0",
    "typescript": "^5",
    "typescript-eslint": "^8.56.1",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "nextjs",
    "slides",
    "presentation",
    "slide-deck",
    "react",
    "tailwind",
    "view-transitions",
    "highlight.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aurorascharff/nextjs-slides"
  }
